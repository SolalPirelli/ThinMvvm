<phone:PhoneApplicationPage x:Class="ThinMvvm.SampleApp.WindowsPhone.Views.MainView"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:my="clr-namespace:ThinMvvm.SampleApp.WindowsPhone"
                            xmlns:myDesign="clr-namespace:ThinMvvm.SampleApp.ViewModels.Design;assembly=ThinMvvm.SampleApp"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            mc:Ignorable="d"
                            d:DataContext="{Binding Main, Source={StaticResource Design}}">
    <phone:PhoneApplicationPage.Resources>
        <my:LocalizedStrings x:Key="Strings" />
        <myDesign:Design x:Key="Design" />
    </phone:PhoneApplicationPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Resources.MainViewTitle, Source={StaticResource Strings}}"
                   Style="{StaticResource PhoneTextTitle1Style}" />

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock Text="{Binding Resources.MainViewModelInvokedWithArg, Source={StaticResource Strings}}"
                       Style="{StaticResource PhoneTextNormalStyle}"
                       Margin="12,0,0,0" />

            <TextBlock Text="{Binding Argument}"
                       Style="{StaticResource PhoneTextAccentStyle}"
                       Margin="8,0,12,0" />
        </StackPanel>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox" />
            
            <Button Grid.Column="1"
                    Content="{Binding Resources.Save, Source={StaticResource Strings}}"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding Text, ElementName=InputBox}" />
        </Grid>
        
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal">
            <TextBlock Text="{Binding Resources.SavedText, Source={StaticResource Strings}}"
                       Style="{StaticResource PhoneTextNormalStyle}"
                       Margin="12,0,0,0" />
            
            <TextBlock Text="{Binding SavedText}"
                       Style="{StaticResource PhoneTextAccentStyle}"
                       Margin="8,0,12,0" />
        </StackPanel>
        
        <Button Grid.Row="5"
                Content="{Binding Resources.ShowAboutView, Source={StaticResource Strings}}"
                Command="{Binding ShowAboutViewCommand}" />
    </Grid>
</phone:PhoneApplicationPage>